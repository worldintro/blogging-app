<h1> <%= @post.title %> </h1>
<p> <%= @post.body %> </p>
<hr>
<%= link_to "Редактировать", edit_post_path(@post), :class => 'btn btn-primary' %>
<%= link_to "Удалить", post_path(@post),  method: :delete, data:{confirm: "{Хотите удалить статью?}"}, :class => 'btn btn-danger' %>
<hr>
<h2> Все комментарии </h2>

<% @post.comment.each do |comment| %>
<div class='alert alert-light'>
	<p><strong><%= comment.username %></strong>: <%= comment.body %></p>
</div>
<% end %>
<hr>
<h2> Добавить комментарий </h2>
<%= form_for([@post, @post.comment.build]) do |f| %>
	<p>
		Имя пользователя <br>
		<%= f.text_field(:username, {:class => 'form-control'}) %>
	</p>
	<p>
		Текст комментария <br>
		<%= f.text_area(:body, {:class => 'form-control'}) %>
	</p>
	<p>
		<%= f.submit("Добавить комментарий", {:class =>'btn btn-primary mb-2'}) %>
	</p>
<% end %>